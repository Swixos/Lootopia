{
  "name": "lootopia",
  "version": "1.0.0",
  "description": "Plateforme de chasses au trésor numériques - Monorepo",
  "private": true,
  "scripts": {
    "dev:frontend": "pnpm --filter @lootopia/frontend dev",
    "dev:backend": "pnpm --filter @lootopia/backend start:dev",
    "dev": "pnpm run dev:backend & pnpm run dev:frontend",
    "build:frontend": "pnpm --filter @lootopia/frontend build",
    "build:backend": "pnpm --filter @lootopia/backend build",
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "test": "pnpm -r test",
    "test:e2e": "pnpm -r test:e2e",
    "lint": "pnpm --filter @lootopia/backend lint",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
  },
  "keywords": [
    "treasure-hunt",
    "gamification",
    "geolocation",
    "augmented-reality"
  ],
  "author": "Lootopia Team",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.3.3",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
